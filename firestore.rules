rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User documents - users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Farm subcollection
      match /farms/{farmId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Chat history subcollection
      match /chats/{chatId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Government schemes - read-only for authenticated users
    match /schemes/{schemeId} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins can write (via Cloud Functions)
    }
  }
}
